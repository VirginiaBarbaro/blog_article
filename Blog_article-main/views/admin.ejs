<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="container">
      <div class="row mt-5">
        <h1 id="welcome">Welcome <%= user.firstname %> <%= user.lastname %></h1>
        <div class="col-lg-6 title-action-writer">
          <div>
            <h2>Articles</h2>
          </div>
          <!-- <div>
            <button class="btn-admin-panel-new-article">
              <a href="/articles/create" class="link-to"> New Article</a>
            </button>
          </div> -->
        </div>
        <div class="header-btn-title p-2 my-3">
          <div class="btn-action-admin">
            <% if (user && user.roleCode >= 400) { %>
            <button class="btn-admin-panel">
              <a href="/user" class="link-to">Admin all users</a>
            </button>
          </div>
        </div>
        <% } %>
        <div class="table-admin-div">
          <table class="table table-striped p-2">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Autor</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for (const artic of articles) { %>
              <tr>
                <th scope="row"><%= artic.id %></th>
                <td><%= artic.title %></td>
                <td><%= artic.content %></td>
                <td><%= artic.user.firstname %> <%= artic.user.lastname %></td>
                <td>
                  <a href="/articles/edit/<%= artic.id %>">
                    <button class="btn-table-panel-admin-modify my-4">Modify</button>
                  </a>
                  <% if (user && user.id === artic.user.id || user && user.roleCode >= 400) { %>
                  <a href="/articles/delete/<%= artic.id %>">
                    <button class="btn-table-panel-admin-delete my-4">Delete</button>
                  </a>
                  <% } %>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <%- include ("partials/footer") %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/06adc08716.js" crossorigin="anonymous"></script>
  </body>
</html>
