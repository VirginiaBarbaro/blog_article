<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div id="container-img">
      <h2 id="main-title">Hack the blog</h2>
      <p id="subtitle">The Hack Academy's blog</p>
    </div>
    <section id="section">
      <% for (const art of articles) { %>
      <div id="content">
        <a id="a" href="/articles/<%= art.id %> "><h4><%= art.title %></h4></a>
        <small> Created by <%= art.user.firstname %> </small>
        <small> Created by <%= art.user.lastname %> </small>
        <small> Created by <%= art.createdAt %> </small>
        <hr />
      </div>
      <% } %>
    </section>
    <%- include ("partials/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/06adc08716.js" crossorigin="anonymous"></script>
  </body>
</html>
